// Fetch the RSS feed from 'myrss.xml'
fetch('myrss.xml')
    .then(response => response.text())
    .then(xml => {
        // Parse the XML string to an XML document
        const parser = new DOMParser();
        const xmlDoc = parser.parseFromString(xml, 'text/xml');

        // Extract all the <item> elements from the XML
        const items = xmlDoc.querySelectorAll('item');

        // Get the container where RSS items will be displayed
        const rssFeed = document.getElementById('rssFeed');

        // Loop through each <item> in the RSS feed
        items.forEach(item => {
            const title = item.querySelector('title').textContent;
            const link = item.querySelector('link').textContent;
            const image = item.querySelector('image').textContent;

            // Create the structure for each RSS item
            const rssItem = document.createElement('div');
            rssItem.classList.add('rss-items');
            rssItem.innerHTML = `
                <a href="${link}" target="_self">
                    <img src="${image}" alt="${title}">
                    <h1>${title}</h1>
                </a>
            `;
            // Append each RSS item to the feed container
            rssFeed.appendChild(rssItem);
        });
    })
    .catch(error => console.error('Error fetching myrss.xml:', error));
